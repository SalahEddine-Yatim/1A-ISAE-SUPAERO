/**
 * @file array-to-pointer.h
 *
 * @brief Simple experiments with arrays decay in C
 *
 * @author Christophe Garion
 */

#ifndef ARRAY_TO_POINTER_H
#define ARRAY_TO_POINTER_H

/**
 * @brief Print an array using subscript notation
 *
 * @param size the size of the array
 * @param array the array to be printed
 */
void print_array_array(int size, int array[]);

/**
 * @brief Print an array using pointer notation
 *
 * @param size the size of the array
 * @param array the array to be printed
 */
void print_array_pointer(int size, int array[]);

/**
 * @brief Print an array using subscript notation
 *
 * @param size the size of the array
 * @param array a pointer to the first element of
 *        the array to be printed
 */
void print_pointer_array(int size, int *array);

/**
 * @brief Print an array using pointer notation
 *
 * @param size the size of the array
 * @param array a pointer to the first element of
 *        the array to be printed
 */
void print_pointer_pointer(int size, int *array);

#endif
