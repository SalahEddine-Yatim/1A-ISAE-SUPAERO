{
    // a simple task file to build the application
    "version": "2.0.0",
    "tasks": [
        {
        "type": "cppbuild",
        "label": "build buggy-source",
        "command": "make",
        "args": [
            "buggy-source"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": false
        },
    },
        {
        "type": "cppbuild",
        "label": "build buggy-source-more",
        "command": "make",
        "args": [
            "buggy-source-more"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": false
        },
    }
    ]
}
